<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Track -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#7F7F7F" />
        </shape>
    </item>
    <!-- Progress Bar -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <solid android:color="#FFFFFF" />
            </shape>
        </clip>
    </item>
</layer-list>
